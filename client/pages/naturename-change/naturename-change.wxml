<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">更改自然名</view>
    <form bindsubmit="changeInfo">
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">自然名</view>
          </view>
          <view class="weui-cell__bd">
            <view class="weui-toptips weui-toptips_warn" wx:if="{{showError}}">{{error}}</view>
            <input class="weui-input" name="naturename" placeholder="请输入自然名" />
          </view>
        </view>
      </view>
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" form-type="submit">确定</button>
      </view>
    </form>
  </view>
</view>